<div class="container main">
    <div class="row">
        <div class="col-lg-6">
           <h2 class="headers">Account Settings</h2>
           <hr />
           <h2 class="bold">{{activeUser.name}}</h2>
           <h2 class="bold" id="btm25" style="font-size: 1.5rem">{{#compare activeUser.permissions "admin"}}Administrator{{/compare}}{{#compare activeUser.permissions "admin" operator="!="}}User{{/compare}}</h2>
           <h2 class="thin">{{activeUser.email}}</h2>
           <h2 class="thin" id="btm25" style="font-size: 1.5rem">Bio: {{activeUser.bio}}</h2>
        </div>
        <div class="col-lg-6">
            <div class="card pwrd-change-form">
                <div class="card-body">
                    <form action="/changepass" method="post">
                    <h2 class="text-center headers">Change Password</h2>
                    <div class="form-group">
                        <input type="text" class="form-control thin" placeholder="Email" name="email" required="required">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control thin" placeholder="Change Password" name="change-password" required="required">
                    </div>
                     <div class="form-group">
                        <input type="password" class="form-control thin" placeholder="Confirm Password" name="confirm-password" required="required">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-light btn-block bold">Submit</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
</div>