<div class="container main" id="addOpportunity">
  <div class="row">
    <div class="col-md-12">
      <h2 class="headers">Add an Opportunity</h2>
      <hr />
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <form class="thin" style="font-size: 1.2rem">
        <div class="form-group">
          <label for="name" class="bold" style="font-size: 1.2rem">Opportunity Name</label>
          <input type="input" class="form-control" id="name" placeholder="Name of Opportunity">
        </div>
        <div class="form-group">
          <label for="description" class="bold" style="font-size: 1.2rem">Description</label>
          <textarea class="form-control" id="description" rows="3"></textarea>
        </div>
        <div class="form-group">
          <label for="category" class="bold" style="font-size: 1.2rem">Category</label>
          <select class="form-control" id="category">
            <option>All</option>
            <option>Painting</option>
            <option>Photography</option>
            <option>Performance</option>
            <option>Abstract</option>
          </select>
        </div>
        <div class="form-group">
          <label for="deadline" class="bold" style="font-size: 1.2rem">Deadline</label>
          <input class="form-control" type="date" value="2018-08-19" id="deadline">
        </div>
        <button class="btn btn-light" id="submitOpportunity">Submit</button>
      </form>
    </div>
  </div>
</div>
