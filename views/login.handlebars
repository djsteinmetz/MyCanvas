<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card login-form">
                {{#if message}}
                <div class="card-header text-center"><h2 class="bold" style="color:red; font-size: 1rem"><i class="fas fa-exclamation-triangle"></i> {{message}} <i class="fas fa-exclamation-triangle"></i> </div>
                {{/if}}
                <div class="card-body">
                    <form action="/login" method="post">
                    <h2 class="text-center headers">Log in</h2>
                    <div class="form-group">
                        <input type="text" class="form-control thin" placeholder="Email" name="email" required="required">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control thin" placeholder="Password" name="password" required="required">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-light btn-block bold">Log in</button>
                    </div>
                    </form>
                </div>
                <div class="card-footer">
                    <p class="text-center bold" style="font-size: 1.05rem"><a href="/register">Not a member? Create an Account</a></p>
                </div>
            </div>
        </div>
    </div>
</div>