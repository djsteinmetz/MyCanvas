<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h2 class="bold">{{name}}</h2>
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            {{description}}
                        </div>
                        <div class="col-md-6 text-right bold" style="font-size: 1rem">
                            <a class="btn btn-lg btn-light" href="/opportunity/{{id}}">Details ></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                Posted by: <span class="bold" style="font-size: 1rem">{{User.name}}</span>
            </div>
        </div>
    </div>
</div>